<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:layout_width="match_parent"
        android:defaultValue="Sunday"
        android:dialogTitle="Select Grocery Day"
        android:entries="@array/pref_days_entries"
        android:entryValues="@array/pref_days_values"
        android:key="pref_grocery_days"
        android:summary="Sunday"
        android:title="@string/grocery_day_title" />

    <ListPreference
        android:layout_width="match_parent"
        android:defaultValue="Vegetarian"
        android:dialogTitle="Select Dietary Preference"
        android:entries="@array/pref_diet_entries"
        android:entryValues="@array/pref_diet_values"
        android:key="pref_diet"
        android:summary="Vegetarian"
        android:title="Dietary Preference" />

    <CheckBoxPreference
        android:layout_width="match_parent"
        android:defaultValue="true"
        android:key="check_box_pref_notifications"
        android:summary="On/Off Notifications"
        android:title="Notifications" />


</PreferenceScreen>